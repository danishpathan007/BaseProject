# Uncomment the next line to define a global platform for your project
 platform :ios, '13.0'

target 'BaseProject' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for BaseProject

   pod 'Alamofire', '~> 5.4'
   pod 'ReachabilitySwift', '~> 4.3.1'    #Manages Internet connectivity
   pod 'NVActivityIndicatorView'          #Manage Loader
   pod 'Kingfisher'                       #For image
   pod 'UIScrollView-InfiniteScrollSwift' #Manage Pagination
   pod 'IQKeyboardManager'                #Manage IQKeyboard

end
